{
    "type": "origins:multiple",
    "air": {
        "type": "origins:active_self",
        "hud_render": {
            "should_render": false
        },
        "cooldown": 5,
        "key": {
            "key": "key.jump"
        },
        "entity_action": {
            "type": "origins:and",
            "actions": [{
                    "type": "origins:change_resource",
                    "resource": "*:*_jumps",
                    "change": -1
                },
                {
                    "type": "origins:set_fall_distance",
                    "fall_distance": 0
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:moving"
                    },
                    "if_action": {
                        "type": "origins:add_velocity",
                        "y": 0.65,
                        "z": 0.35,
                        "space": "local_horizontal"
                    },
                    "else_action": {
                        "type": "origins:add_velocity",
                        "y": 0.6,
                        "space": "local_horizontal"
                    }
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [{
                    "type": "origins:resource",
                    "resource": "*:*_jumps",
                    "comparison": ">=",
                    "compare_to": 1
                },
                {
                    "type": "origins:on_block",
                    "inverted": true
                },
                {
                    "type": "origins:climbing",
                    "inverted": true
                },
                {
                    "type": "origins:riding",
                    "inverted": true
                },
                {
                    "type": "origins:swimming",
                    "inverted": true
                },
                {
                    "type": "origins:gamemode",
                    "gamemode": "creative",
                    "inverted": true
                },
                {
                    "type": "origins:gamemode",
                    "gamemode": "spectator",
                    "inverted": true

                }
            ]
        }
    },
    "jumps": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "reset": {
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_jumps",
            "change": 1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [{
                    "type": "origins:resource",
                    "resource": "*:*_jumps",
                    "comparison": "<=",
                    "compare_to": 1
                },
                {
                    "type": "origins:on_block"
                }
            ]
        }
    },
    "name": "Double Jump",
    "description": "Jump Mid Air"
}