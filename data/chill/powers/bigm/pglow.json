{
    "hidden": true,
    "type": "origins:multiple",
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": true,
        "key": {
            "key": "key.origins.primary_active"
        },
        "retain_state": false
    },
    "low": {
        "condition": {
            "type": "origins:power_active",
            "power": "*:*_toggle"
        },
        "type": "origins:entity_glow",
        "entity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:relative_health",
                    "comparison": "<",
                    "compare_to": 0.5
                },
                {
                    "type": "origins:living"
                }
            ]
        },
        "bientity_condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:can_see"
                },
                {
                    "type": "origins:distance",
                    "comparison": "<=",
